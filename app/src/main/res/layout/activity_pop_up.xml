<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rgt.nenad.realgymtrainerv2.PopUpActivity"
    android:padding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/good_job"
                android:id="@+id/TextViewMain"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:textSize="40dp"
                android:textColor="@color/FontGreen" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/imageViewNewAch"
                android:src="@drawable/achiventeibbonwhite"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/good_job_long"
            android:id="@+id/textViewOpis"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Training percentage:"
            android:id="@+id/textView13"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="85%"
            android:id="@+id/textViewProcenat"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="0dp"
            android:padding="6dp"
            android:textSize="85dp"
            android:singleLine="false"
            android:textColor="@color/FontGreen"
            />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/new_button2"
            android:clickable="true"
            android:onClick="OKbtn"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"

            android:layout_weight="0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="13dp">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:textSize="35dp"
                android:textColor="#ffffffff"
                android:layout_marginRight="5dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
