<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rgt.nenad.realgymtrainerv2.EditActivity"
    android:id="@+id/Container">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#6e000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:baselineAligned="false"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/TextLayout"
            android:gravity="center_vertical|center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Edit Your Profile:"
                android:id="@+id/textViewEditProfile"
                android:textColor="#ffffff" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_margin="5dp"
            android:padding="5dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/VerticalLayout"
        android:padding="10dp"
        android:background="#6e000000">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/Imelayout"
            android:layout_marginTop="20dp"
            android:background="#7fff7600"
            android:gravity="bottom|center">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Ime:"
                android:id="@+id/textViewIme"
                android:layout_marginLeft="30dp"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textColor="#ffffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextIme"
                android:layout_weight="1"
                android:theme="@style/MyEditTextTheme"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/Prezimelayout"
            android:layout_marginTop="5dp"
            android:background="#7fff7600"
            android:gravity="bottom|center">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Prezime:"
                android:id="@+id/textViewPrezime"
                android:layout_marginLeft="30dp"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textColor="#ffffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextPrezime"
                android:layout_weight="1"
                android:theme="@style/MyEditTextTheme"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/Rukalayout"
            android:layout_marginTop="5dp"
            android:background="#7fff7600"
            android:gravity="bottom|center">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Obim ruke:"
                android:id="@+id/textViewRuka"
                android:layout_marginLeft="30dp"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textColor="#ffffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextRuka"
                android:layout_weight="1"
                android:theme="@style/MyEditTextTheme"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/Grudilayout"
            android:layout_marginTop="5dp"
            android:background="#7fff7600"
            android:gravity="bottom|center">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Obim grudi:"
                android:id="@+id/textViewGrudi"
                android:layout_marginLeft="30dp"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textColor="#ffffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextGrudi"
                android:layout_weight="1"
                android:theme="@style/MyEditTextTheme"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp" />
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/Struklayout"
            android:layout_marginTop="5dp"
            android:background="#7fff7600"
            android:gravity="bottom|center">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Obim struka:"
                android:id="@+id/textViewStruk"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textColor="#ffffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextStruk"
                android:layout_weight="1"
                android:theme="@style/MyEditTextTheme"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/Nogalayout"
            android:layout_marginTop="5dp"
            android:background="#7fff7600"
            android:gravity="bottom|center">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Obim noge:"
                android:id="@+id/textViewNoga"
                android:layout_marginLeft="30dp"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textColor="#ffffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextNoga"
                android:layout_weight="1"
                android:theme="@style/MyEditTextTheme"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/Visinalayout"
            android:layout_marginTop="5dp"
            android:background="#7fff7600"
            android:gravity="bottom|center">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Visina:"
                android:id="@+id/textViewVisina"
                android:layout_marginLeft="30dp"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textColor="#ffffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextVisina"
                android:layout_weight="1"
                android:theme="@style/MyEditTextTheme"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/Tezinalayout"
            android:layout_marginTop="5dp"
            android:background="#7fff7600"
            android:gravity="bottom|center">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Tezina:"
                android:id="@+id/textViewTezina"
                android:layout_marginLeft="30dp"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textColor="#ffffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextTezina"
                android:layout_weight="1"
                android:theme="@style/MyEditTextTheme"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#7fff7600"
            android:id="@+id/WorkoutTypeLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="30dp"
                android:text="Workout Type:"
                android:textColor="#ffffff"
                android:id="@+id/textViewWT" />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonCW"
                    android:text="Circuit Workout"
                    android:onClick="radioBtnClicked"
                    android:buttonTint="#ffffffff"
                    android:textColor="#ffffff"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonBW"
                    android:text="Beginner Workout"
                    android:checked="true"
                    android:onClick="radioBtnClicked"
                    android:buttonTint="#ffffffff"
                    android:textColor="#ffffff"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonAW"
                    android:text="Advanced Workout"
                    android:onClick="radioBtnClicked"
                    android:buttonTint="#ffffffff"
                    android:textColor="#ffffff"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#6e000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:baselineAligned="false"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/ButtonLayout"
            android:gravity="center_vertical|center_horizontal" >

            <LinearLayout
                android:id="@+id/SaveBtnLayout"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/new_button2"
                android:clickable="true"
                android:orientation="horizontal"
                android:onClick="SaveProfile"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_weight="0"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:text="SAVE"
                    android:textSize="18sp"
                    android:textColor="#ffffffff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/DiscardBtnLayout"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/new_button2"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_weight="0"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:text="DISCARD"
                    android:textSize="18sp"
                    android:textColor="#ffffffff" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
